<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Semester</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr style="background-color: <%=course.color%>">
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.semester %></td>
        <td><%= link_to course.name, course_path(course) %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class: 'btn btn-warning font-white' %>
<%= link_to 'Show all notes', new_course_path, class: 'btn btn-warning font-white' %>
